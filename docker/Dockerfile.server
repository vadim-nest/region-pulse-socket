# docker/Dockerfile.server
FROM node:20-alpine AS build
WORKDIR /app

# copy manifests first for better cache
COPY server/package*.json ./
RUN npm ci

# then copy the rest of the source
COPY server/. .
RUN npm run build

# -- runtime image --
FROM node:20-alpine
WORKDIR /app
COPY --from=build /app/dist ./dist
COPY server/package*.json ./
RUN npm ci --omit=dev
CMD ["node", "dist/index.js"]
